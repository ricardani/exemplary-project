{
    "extends": ["airbnb", "airbnb/hooks"],
    "globals": {
        "document": true,
        "describe": true,
        "it": true,
        "expect": true
    },
    "rules": {
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "max-len": [2, 150]
    }
}
